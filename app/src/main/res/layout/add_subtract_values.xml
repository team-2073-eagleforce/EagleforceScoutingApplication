<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addSubtractConstraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/formEditText"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/formAdd"
        app:layout_constraintStart_toEndOf="@+id/formSubtract"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/formAdd"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:background="#00000000"
        android:gravity="center"
        android:src="@drawable/vector_add_white"
        android:text="+"
        android:textColor="@color/defaultTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/formEditText"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/formSubtract"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:background="#00000000"
        android:gravity="center"
        android:src="@drawable/vector_minus_white"
        android:text="--"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/formField"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/formField"
        android:layout_width="126dp"
        android:layout_height="92dp"
        android:autoSizeTextType="none"
        android:text="Field"
        android:textColor="@color/defaultTextColor"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>
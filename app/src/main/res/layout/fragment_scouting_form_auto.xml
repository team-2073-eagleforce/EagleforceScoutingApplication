<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.team2073.eagleforcescoutingapplication.activities.fragment.AutoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <CheckBox
                android:id="@+id/sandstorm_cross_CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="1"
                android:scaleY="1"
                android:text="Passed Baseline"
                android:textColor="@color/standard_text_color"
                android:textSize="30sp" />


            <RelativeLayout
                android:id="@+id/rocket_cargo_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sandstorm_cross_CheckBox">


                <TextView
                    android:id="@+id/sandstorm_rocket_cargo_TextView"
                    android:layout_width="124dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="7dp"
                    android:layout_toStartOf="@+id/teleop_rocket_cargo_layout"
                    android:autoSizeTextType="uniform"
                    android:text="Rocket Cargo"
                    android:textColor="@color/standard_text_color"
                    android:textSize="30sp" />

                <include
                    android:id="@+id/teleop_rocket_cargo_layout"
                    layout="@layout/add_subtract_values"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="30dp" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rocket_cargo_fail_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rocket_cargo_count"
                android:layout_marginTop="15dp">


                <TextView
                    android:id="@+id/sandstorm_rocket_cargo_fail_TextView"
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:autoSizeTextType="uniform"
                    android:text="Rocket Cargo Fail"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="italic" />

                <include
                    android:id="@+id/teleop_rocket_cargo_fails_layout"
                    layout="@layout/add_subtract_values"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"

                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="30dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rocket_hatches_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rocket_cargo_fail_count"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/sandstorm_rocket_hatches_TextView"
                    android:layout_width="121dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="10dp"
                    android:autoSizeTextType="uniform"
                    android:text="Rocket Hatches"
                    android:textColor="@color/standard_text_color"
                    android:textSize="30sp" />

                <include
                    android:id="@+id/teleop_rocket_hatches_layout"
                    layout="@layout/add_subtract_values"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="0dp" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rocket_hatches_fail_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rocket_hatches_count"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/sandstorm_rocket_hatches_fail_TextView"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="10dp"
                    android:autoSizeTextType="uniform"
                    android:text="Rocket Hatches Fail"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="italic" />

                <include
                    android:id="@+id/teleop_rocket_hatches_fail_layout"
                    layout="@layout/add_subtract_values"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="30dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cargoship_cargo_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rocket_hatches_fail_count"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/sandstorm_cargoship_cargo_TextView"
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="10dp"
                    android:text="Cargoship Cargo"
                    android:textColor="@color/standard_text_color"
                    android:textSize="30sp" />

                <include
                    android:id="@+id/teleop_cargoship_cargo_layout"
                    layout="@layout/add_subtract_values"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="30dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cargoship_cargo_fail_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cargoship_cargo_count"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/sandstorm_cargoship_cargo_fail_TextView"
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="10dp"
                    android:text="Cargoship Cargo Fail"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="italic" />

                <include
                    android:id="@+id/teleop_cargoship_cargo_fails_layout"
                    layout="@layout/add_subtract_values"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="30dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cargoship_hatches_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cargoship_cargo_fail_count"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/sandstorm_cargoship_hatches_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="10dp"
                    android:text="CargoShip Hatches"
                    android:textColor="@color/standard_text_color"
                    android:textSize="30sp" />

                <include
                    android:id="@+id/teleop_cargoship_hatches_layout"
                    layout="@layout/add_subtract_values"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="30dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cargoship_hatches_fail_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cargoship_hatches_count"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/sandstorm_cargoship_hatches_fail_TextView"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="10dp"
                    android:text="CargoShip Hatches Fail"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="italic" />

                <include
                    android:id="@+id/teleop_cargoship_hatches_fail_layout"
                    layout="@layout/add_subtract_values"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="right"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/section_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textColor="@color/standard_text_color"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintTop_creator="1" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


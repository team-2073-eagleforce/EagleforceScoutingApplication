<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="vertical"
            android:id="@+id/auto_left_layout"
            android:gravity="center">

            <include
                android:id="@+id/auto_amp"
                layout="@layout/add_subtract_values_amp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="75dp"/>

            <ImageButton
                android:id="@+id/autoChargingStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/auto_none" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:orientation="vertical"
            android:id="@+id/auto_right_layout"
            android:gravity="center">

            <include
                android:id="@+id/auto_speaker_make"
                layout="@layout/add_subtract_values_speaker_make"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"/>

            <include
                android:id="@+id/auto_speaker_miss"
                layout="@layout/add_subtract_values_speaker_miss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
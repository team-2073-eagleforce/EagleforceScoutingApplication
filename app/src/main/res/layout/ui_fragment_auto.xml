<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/autoline_button"
            android:layout_width="300dp"
            android:layout_height="175dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/tarmac"
            android:foreground="?attr/selectableItemBackgroundBorderless" />

        <RelativeLayout
            android:id="@+id/auto_cell_score_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/auto_bottomport_button"
            android:layout_marginTop="20dp">

            <include
                android:id="@+id/upperhub_layout"
                layout="@layout/port_points_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

            <include
                android:id="@+id/lowerhub_layout"
                layout="@layout/port_points_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/upperhub_layout"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/auto_outer_and_inner_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/autoline_button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp">

            <ImageButton
                android:id="@+id/auto_outerport_button_right"
                android:layout_width="200dp"
                android:layout_height="275dp"
                android:layout_marginStart="195dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/upperright"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintHorizontal_bias="0.971"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/auto_outerport_button_left"
                android:layout_width="200dp"
                android:layout_height="275dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="195dp"
                android:background="@drawable/upperleft"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/auto_bottomport_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/auto_outer_and_inner_frame"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:id="@+id/auto_bottomport_button_right"
                android:layout_width="250dp"
                android:layout_height="140dp"
                android:background="@drawable/lowerright"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:layout_marginStart="250dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/auto_bottomport_button_left"
                android:layout_width="250dp"
                android:layout_height="140dp"
                android:layout_marginEnd="245dp"
                android:background="@drawable/lowerleft"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

</ScrollView>
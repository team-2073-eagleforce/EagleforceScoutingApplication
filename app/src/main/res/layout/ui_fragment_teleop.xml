<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/wofLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tele_cell_score_count"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/wofHalfFirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wofhalf"
                android:rotation="90"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/wofDarkHalfFirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wofhalfdark"
                android:rotation="90"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/wofHalfSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="170dp"
                android:background="@drawable/wofhalf"
                android:rotation="270"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/wofDarkHalfSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="170dp"
                android:background="@drawable/wofhalfdark"
                android:rotation="270"
                android:height="50dp"
                android:width="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/rotationControlButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:width="110dp"
                android:height="100dp"
                android:text="Rotation"
                app:layout_constraintBottom_toTopOf="@+id/positionControlButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/positionControlButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:width="110dp"
                android:height="100dp"
                android:text="Position"
                app:layout_constraintBottom_toBottomOf="@+id/wofHalfFirst"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/tele_cell_score_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tele_bottomport_button"
            android:layout_marginBottom="20dp">

            <include
                android:id="@+id/outerport_layout"
                layout="@layout/port_points_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/bottomport_layout"
                layout="@layout/port_points_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/outerport_layout" />

        </RelativeLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tele_outer_and_inner_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:id="@+id/tele_outerport_button_right"
                android:layout_width="170dp"
                android:layout_height="280dp"
                android:layout_marginLeft="165dp"
                android:background="@drawable/outer_port_half"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/tele_outerport_button_left"
                android:layout_width="170dp"
                android:layout_height="280dp"
                android:layout_marginRight="165dp"
                android:background="@drawable/outer_port_half_shaded"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tele_bottomport_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tele_outer_and_inner_frame"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/tele_bottomport_button_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="183dp"
                android:background="@drawable/bottomporthalf"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/tele_bottomport_button_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="183dp"
                android:background="@drawable/bottom_port_half_shaded"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

</ScrollView>


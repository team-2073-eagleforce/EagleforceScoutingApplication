<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RelativeLayout
            android:id="@+id/telop_cell_score_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/teleop_bottomport_button"
            android:layout_marginTop="50dp">

            <include
                android:id="@+id/upperhub_layout"
                layout="@layout/port_points_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

            <include
                android:id="@+id/lowerhub_layout"
                layout="@layout/port_points_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/upperhub_layout"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/teleop_outer_and_inner_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp">

            <ImageButton
                android:id="@+id/teleop_outerport_button_right"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_marginStart="210dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/upper_plus"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintHorizontal_bias="0.971"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/teleop_outerport_button_left"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="210dp"
                android:background="@drawable/upper_minus"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/teleop_bottomport_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/teleop_outer_and_inner_frame"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:id="@+id/teleop_bottomport_button_right"
                android:layout_width="250dp"
                android:layout_height="175dp"
                android:background="@drawable/bottom_plus"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:layout_marginStart="255dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/teleop_bottomport_button_left"
                android:layout_width="250dp"
                android:layout_height="175dp"
                android:layout_marginEnd="255dp"
                android:background="@drawable/lower_minus__2_"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

</ScrollView>


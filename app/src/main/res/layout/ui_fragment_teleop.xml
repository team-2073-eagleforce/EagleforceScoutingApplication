<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/WOF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/wof"
            android:text="@string/WOF"/>

        <Button
            android:id="@+id/rotationControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/Rotation"
            android:width="110dp"
            android:height="100dp" />

        <Button
            android:id="@+id/positionControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_allignParentTop="true"
            android:layout_centerHorizontal="true"
            android:width="110dp"
            android:height="100dp"
            android:text="@string/Position"
            />

        <TextView
            android:id="@+id/positionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/positionText"
            android:width="110dp"
            android:height="100dp"

            />

        <TextView
            android:id="@+id/rotationText"
            android:layout_toRightOf="@+id/rotationControl"
            android:text="@string/rotationText"
            android:width="110dp"
            android:height="100dp"
             />

    </RelativeLayout>


</ScrollView>


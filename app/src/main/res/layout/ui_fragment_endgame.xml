<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/climb_beam"
            android:layout_width="wrap_content"
            android:layout_height="700dp"
            android:src="@drawable/climb_beam"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/climb_beam" />

        <ImageView
            android:id="@+id/climb_bar_straight"
            android:layout_width="450dp"
            android:layout_height="100dp"
            android:layout_marginTop="85dp"
            android:src="@drawable/climb_bar_straight"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/climb_beam" />

        <ImageView
            android:id="@+id/climb_bar_tilt"
            android:layout_width="450dp"
            android:layout_height="100dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="85dp"
            android:src="@drawable/climb_bar_straight"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/climb_beam" />

        <ImageView
            android:id="@+id/robot_state_parked"
            android:layout_width="200dp"
            android:layout_height="175dp"
            android:background="@drawable/robotdraftone"
            app:layout_constraintBottom_toBottomOf="@id/climb_beam"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageButton
            android:id="@+id/robot_state_climb_button"
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:layout_marginTop="150dp"
            app:layout_constraintBottom_toBottomOf="@id/climb_beam"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/robot_state_parked" />

        <ImageView
            android:id="@+id/robot_state_climbNull"
            android:layout_width="200dp"
            android:layout_height="175dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/robotdraftonefade"
            app:layout_constraintBottom_toBottomOf="@id/climb_beam"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageButton
            android:id="@+id/robot_state_balanced"
            android:layout_width="200dp"
            android:layout_height="175dp"
            android:background="@drawable/robotdraftone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/climb_beam"
            android:layout_marginTop="165dp"
            />

        <ImageButton
            android:id="@+id/robot_state_balanced2"
            android:layout_width="200dp"
            android:layout_height="175dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/robotdraftone"
            app:layout_constraintTop_toTopOf="@id/robot_state_balanced"
            app:layout_constraintRight_toLeftOf="@id/robot_state_balanced"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="165dp" />

        <ImageButton
            android:id="@+id/robot_state_balanced3"
            android:layout_width="200dp"
            android:layout_height="175dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="120dp"
            app:layout_constraintTop_toTopOf="@id/robot_state_balanced"
            android:background="@drawable/robotdraftone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/robot_state_balanced"
            tools:layout_editor_absoluteY="165dp" />


        <ImageButton
            android:id="@+id/robot_state_unbalanced"
            android:layout_width="200dp"
            android:layout_height="175dp"
            android:background="@drawable/robotdraftone"
            app:layout_constraintRight_toRightOf="@id/climb_beam"
            app:layout_constraintTop_toTopOf="@id/climb_beam"
            android:layout_marginTop="208dp"
            />

        <Button
            android:id="@+id/robot_change_level_button"
            android:layout_width="250dp"
            android:layout_height="130dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/climb_beam"
            android:layout_marginTop="80dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>